{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "argocd": {
    "fileMatch": ["\\.yaml$"]
  },
  "automerge": true,
  "automergeType": "pr",
  "dependencyDashboardApproval": true,
  "labels": ["dependencies"],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
